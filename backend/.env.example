PORT=3000
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/greenchainz

# Auth
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret

# Frontend
FRONTEND_URL=http://localhost:5173

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# AWS S3 (Image Uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=greenchainz-assets

# ============================================
# CERTIFICATION API PROVIDERS
# ============================================

# FSC (Forest Stewardship Council)
# Get your API key at: https://info.fsc.org/
FSC_API_KEY=your_fsc_api_key

# EPD International (Environmental Product Declarations)
# Get your API key at: https://www.environdec.com/
EPD_INTERNATIONAL_API_KEY=your_epd_api_key

# EC3 / Building Transparency
# Get your API key at: https://buildingtransparency.org/
EC3_API_KEY=your_ec3_bearer_token

# ============================================
# EMAIL & NOTIFICATIONS
# ============================================

# MailerLite (Email Marketing & Automation)
# Get your API key at: https://www.mailerlite.com/
MAILERLITE_API_KEY=your_mailerlite_api_key

# MailerLite Group IDs (optional - create in MailerLite dashboard)
MAILERLITE_SUPPLIERS_GROUP_ID=
MAILERLITE_BUYERS_GROUP_ID=
MAILERLITE_NEWSLETTER_GROUP_ID=

# MailerLite Automation IDs (optional - create in MailerLite dashboard)
MAILERLITE_SUPPLIER_WELCOME_AUTOMATION=
MAILERLITE_CERT_EXPIRING_AUTOMATION=
MAILERLITE_VERIFICATION_COMPLETE_AUTOMATION=

# SMTP (Direct Email Sending - Alternative to MailerLite)
NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=no-reply@greenchainz.com

# ============================================
# OAUTH PROVIDERS (Optional)
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth  
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================
# OUTREACH AGENT (AI Email Automation)
# ============================================

# Azure AI Foundry (for AI email generation)
# Get your endpoint at: https://ai.azure.com/
AZURE_AI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_AI_KEY=your-azure-ai-key
AZURE_AI_DEPLOYMENT=gpt-4

# Alternative: OpenAI directly
# OPENAI_API_KEY=your-openai-api-key

# Outreach SMTP (dedicated email sending for outreach)
# Recommended: SendGrid, Mailgun, or Amazon SES
OUTREACH_SMTP_HOST=smtp.sendgrid.net
OUTREACH_SMTP_PORT=587
OUTREACH_SMTP_USER=apikey
OUTREACH_SMTP_PASS=your-sendgrid-api-key
OUTREACH_FROM_EMAIL=outreach@greenchainz.com
OUTREACH_FROM_NAME=GreenChainz Team

# Agent Schedule & Limits
OUTREACH_CRON_SCHEDULE=0 9 * * 1-5
OUTREACH_BATCH_SIZE=50
OUTREACH_DAILY_LIMIT=200

# ============================================
# ENTERPRISE FEATURES
# ============================================

# Redis (Caching & Sessions)
# Local: redis://localhost:6379
# Cloud: redis://user:password@host:6379
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_QUERIES=false

# Node Environment
NODE_ENV=development
