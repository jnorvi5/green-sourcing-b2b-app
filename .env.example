# ============================================
# BACKEND CONFIG
# ============================================

NODE_ENV=development
PORT=3001

# ============================================
# AZURE DATABASE FOR POSTGRESQL (Primary)
# ============================================
# Recommended: use a single connection string (Azure usually requires SSL).
# Example Azure host format:
#   <server>.postgres.database.azure.com
#
# DATABASE_URL example (note sslmode=require):
# DATABASE_URL=postgresql://<user>:<password>@<server>.postgres.database.azure.com:5432/<db>?sslmode=require
DATABASE_URL=

# Or use individual variables:
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=greenchainz_dev
POSTGRES_SSL=false

# Database pool config
PGPOOL_MAX=20
PGPOOL_MIN=2
PGPOOL_IDLE=30000
PGPOOL_CONNECTION_TIMEOUT=5000
PGPOOL_STATEMENT_TIMEOUT=30000

# ============================================
# AUTH (Azure AD / Entra ID)
# ============================================
# See AZURE_AUTH_SETUP.md for required variables and setup.

# ============================================
# FRONTEND URL (for CORS & redirects)
# ============================================

FRONTEND_URL=http://localhost:5173

# ============================================
# JWT & SECURITY
# ============================================

JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
SESSION_SECRET=your-session-secret-key

# ============================================
# AZURE AI SERVICES
# ============================================

AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ============================================
# AZURE SERVICES (Optional)
# ============================================

FEATURE_AZURE_MONITORING=false
FEATURE_REDIS_CACHING=false

AZURE_APPINSIGHTS_INSTRUMENTATION_KEY=your-key
AZURE_REDIS_CONNECTION_STRING=your-redis-connection

# ============================================
# EMAIL/NOTIFICATIONS
# ============================================

SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_USER=noreply@greenchainz.com
SMTP_PASS=your-zoho-app-password
SMTP_FROM_EMAIL=noreply@greenchainz.com
SMTP_FROM_NAME=GreenChainz

NOTIFICATIONS_ENABLED=true

# ============================================
# EXTERNAL API INTEGRATIONS
# ============================================

AUTODESK_CLIENT_ID=your-autodesk-client-id
AUTODESK_CLIENT_SECRET=your-autodesk-secret

FSC_API_KEY=your-fsc-api-key
FSC_API_URL=https://fsc-api-endpoint.com

# ============================================
# STRIPE (Optional - for payments later)
# ============================================

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# LOGGING & DEBUG
# ============================================

LOG_LEVEL=debug
DEBUG=greenchainz:*
