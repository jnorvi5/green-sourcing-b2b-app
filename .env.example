# ============================================
# BACKEND CONFIG
# ============================================

NODE_ENV=development
PORT=3001

# ============================================
# SUPABASE DATABASE (Primary)
# ============================================
# Get these from Supabase dashboard:
# Settings > Database > Connection string
# Replace SUPABASE_PASSWORD with your actual password

DATABASE_URL=postgresql://postgres.SUPABASE_PROJECT_REF:SUPABASE_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# OR use individual variables (for pool connections):
POSTGRES_HOST=aws-0-us-east-1.pooler.supabase.com
POSTGRES_PORT=6543
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SUPABASE_PASSWORD
POSTGRES_DB=postgres
POSTGRES_SSL=true

# Database pool config
PGPOOL_MAX=20
PGPOOL_MIN=2
PGPOOL_IDLE=30000
PGPOOL_CONNECTION_TIMEOUT=5000
PGPOOL_STATEMENT_TIMEOUT=30000

# ============================================
# SUPABASE AUTH & API
# ============================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# FRONTEND URL (for CORS & redirects)
# ============================================

FRONTEND_URL=http://localhost:5173

# ============================================
# JWT & SECURITY
# ============================================

JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
SESSION_SECRET=your-session-secret-key

# ============================================
# AZURE AI SERVICES
# ============================================

AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ============================================
# AZURE SERVICES (Optional)
# ============================================

FEATURE_AZURE_MONITORING=false
FEATURE_REDIS_CACHING=false

AZURE_APPINSIGHTS_INSTRUMENTATION_KEY=your-key
AZURE_REDIS_CONNECTION_STRING=your-redis-connection

# ============================================
# EMAIL/NOTIFICATIONS
# ============================================

SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_USER=noreply@greenchainz.com
SMTP_PASS=your-zoho-app-password
SMTP_FROM_EMAIL=noreply@greenchainz.com
SMTP_FROM_NAME=GreenChainz

NOTIFICATIONS_ENABLED=true

# ============================================
# EXTERNAL API INTEGRATIONS
# ============================================

AUTODESK_CLIENT_ID=your-autodesk-client-id
AUTODESK_CLIENT_SECRET=your-autodesk-secret

FSC_API_KEY=your-fsc-api-key
FSC_API_URL=https://fsc-api-endpoint.com

# ============================================
# STRIPE (Optional - for payments later)
# ============================================

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# LOGGING & DEBUG
# ============================================

LOG_LEVEL=debug
DEBUG=greenchainz:*
