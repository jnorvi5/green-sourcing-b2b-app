# ============================================
# GREENCHAINZ ENVIRONMENT TEMPLATE
# ============================================
#
# This file serves as the master template for environment variables.
# Copy this to .env (local) or .env.production (server) and fill in values.
#
# CLASSIFICATION:
#   游댮 SECRET - Never commit! Use Azure Key Vault in production
#   游리 SERVER - Environment-specific config (URLs, hosts)
#   游릭 PUBLIC - Safe to commit, feature flags and tuning
#
# ============================================

# ============================================
# CORE SETTINGS 游릭
# ============================================

NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ============================================
# FRONTEND/BACKEND URLs 游리
# ============================================

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
COOKIE_DOMAIN=

# ============================================
# SECRETS (Required) 游댮
# ============================================
# Generate with: openssl rand -base64 48

JWT_SECRET=replace-with-secure-random-string
SESSION_SECRET=replace-with-secure-random-string
COOKIE_SECRET=replace-with-secure-random-string

# ============================================
# DATABASE (PostgreSQL) 游댮游리
# ============================================

# Option 1: Connection String (Recommended for Azure)
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Option 2: Individual Variables (Local Dev)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=greenchainz_dev
POSTGRES_SSL=false

# ============================================
# AZURE RESOURCES 游댮游리
# ============================================

# Azure AD (Auth)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Azure Storage (Blob)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=greenchainz-uploads

# Azure OpenAI & AI Services
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
AZURE_DOCUMENT_INTELLIGENCE_KEY=

# Azure Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=

# ============================================
# PAYMENTS (Stripe) 游댮
# ============================================

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# EMAIL (SMTP) 游댮
# ============================================

SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@greenchainz.com

# ============================================
# FEATURE FLAGS 游릭
# ============================================

FEATURE_AZURE_MONITORING=false
FEATURE_REDIS_CACHING=false
FEATURE_AI_DOCUMENT_ANALYSIS=false
