{
  "name": "gc-ec3-sync",
  "version": "1.0.0",
  "description": "Lambda function to sync EC3 (Embodied Carbon in Construction Calculator) data to MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "package": "npm run build && cd dist && zip -r ../function.zip . && cd .. && zip -ur function.zip node_modules",
    "deploy": "aws lambda update-function-code --function-name gc-ec3-sync --zip-file fileb://function.zip"
  },
  "keywords": ["lambda", "ec3", "carbon", "greenchainz"],
  "author": "GreenChainz",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.500.0",
    "@aws-sdk/client-sns": "^3.500.0",
    "mongodb": "^6.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
