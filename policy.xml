<policies>
    <inbound>
        <base />
        <rate-limit-by-key calls="5" renewal-period="60" counter-key="@(context.Request.IpAddress)" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
        <choose>
            <when condition="@(context.LastError.Reason == "RateLimitExceeded")">
                <set-status code="429" reason="Too Many Requests" />
                <set-body>Deployment Limit Exceeded. Cool down for 60s.</set-body>
            </when>
        </choose>
    </on-error>
</policies>
